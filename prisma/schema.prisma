// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  MOD
  ADMIN
}

enum TopicStatus {
  ACTIVE
  HIDDEN
  LOCKED
}

enum CommentStatus {
  ACTIVE
  HIDDEN
  DELETED
}

enum CommentSide {
  AFAVOR
  CONTRA
}

enum TopicType {
  YES_NO
  MULTI_CHOICE
}

enum ThemeVote {
  SIM
  NAO
  DEPENDE
}

model User {
  id                        String                   @id @default(cuid())
  name                      String?
  username                  String                   @unique
  email                     String                   @unique
  passwordHash              String
  emailVerified             DateTime?
  image                     String?
  role                      UserRole                 @default(USER)
  isOwner                   Boolean                  @default(false)
  preferredLanguage         String                   @default("pt") // UI language preference
  preferredContentLanguages String[]                 @default(["pt", "en", "es", "fr", "de"]) // Content languages to show
  createdAt                 DateTime                 @default(now())
  topics                    Topic[]
  comments                  Comment[]
  votes                     Vote[]
  topicVotes                TopicVote[]
  passwordResetTokens       PasswordResetToken[]
  emailVerificationTokens   EmailVerificationToken[]
}

model Topic {
  id                 String        @id @default(cuid())
  slug               String        @unique
  title              String
  description        String        @db.Text
  language           String        @default("pt") // ISO 639-1: pt, en, es, fr, de, etc.
  tags               String[]
  type               TopicType     @default(YES_NO) // Type of topic: YES_NO or MULTI_CHOICE
  allowMultipleVotes Boolean       @default(false) // Allow multiple option selection (MULTI_CHOICE only)
  maxChoices         Int           @default(1) // Max number of options to select (MULTI_CHOICE only)
  status             TopicStatus   @default(ACTIVE)
  reportCount        Int           @default(0) // Number of reports for moderation
  createdById        String
  createdBy          User          @relation(fields: [createdById], references: [id], onDelete: Cascade)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  comments           Comment[]
  topicVotes         TopicVote[]
  options            TopicOption[] // Options for MULTI_CHOICE topics

  @@index([slug])
  @@index([createdAt(sort: Desc)])
  @@index([status])
  @@index([language])
  @@index([type])
  @@index([reportCount(sort: Desc)])
}

model Comment {
  id          String        @id @default(cuid())
  content     String        @db.Text
  side        CommentSide? // A FAVOR or CONTRA (null for replies or MULTI_CHOICE)
  optionId    String? // For MULTI_CHOICE topics, links comment to specific option
  option      TopicOption?  @relation(fields: [optionId], references: [id], onDelete: Cascade)
  status      CommentStatus @default(ACTIVE)
  reportCount Int           @default(0) // Number of reports for moderation
  topicId     String
  topic       Topic         @relation(fields: [topicId], references: [id], onDelete: Cascade)
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parentId    String?
  parent      Comment?      @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[]     @relation("CommentReplies")
  votes       Vote[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([topicId, createdAt(sort: Desc)])
  @@index([topicId, side])
  @@index([topicId, optionId])
  @@index([userId])
  @@index([reportCount(sort: Desc)])
}

model Vote {
  id        String   @id @default(cuid())
  value     Int // Only +1 for "good argument" quality vote
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, commentId])
  @@index([commentId])
}

model TopicVote {
  id        String       @id @default(cuid())
  vote      ThemeVote? // SIM, NAO, or DEPENDE (for YES_NO topics, null for MULTI_CHOICE)
  optionId  String? // For MULTI_CHOICE topics, the selected option
  option    TopicOption? @relation(fields: [optionId], references: [id], onDelete: Cascade)
  topicId   String
  topic     Topic        @relation(fields: [topicId], references: [id], onDelete: Cascade)
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@unique([userId, topicId, optionId])
  @@index([topicId])
  @@index([optionId])
}

model TopicOption {
  id          String      @id @default(cuid())
  label       String // Display name of the option (e.g., "Messi")
  description String? // Optional short description
  order       Int // Display order
  topicId     String
  topic       Topic       @relation(fields: [topicId], references: [id], onDelete: Cascade)
  votes       TopicVote[] // Votes for this option
  comments    Comment[] // Comments associated with this option
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([topicId, order])
  @@index([topicId])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model EmailVerificationToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}
