// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  MOD
  ADMIN
}

enum TopicStatus {
  ACTIVE
  HIDDEN
  LOCKED
}

enum CommentStatus {
  ACTIVE
  HIDDEN
  DELETED
}

enum CommentSide {
  AFAVOR
  CONTRA
}

enum TopicType {
  YES_NO
  MULTI_CHOICE
}

enum ThemeVote {
  SIM
  NAO
  DEPENDE
}

model User {
  id                   String                @id @default(cuid())
  name                 String?
  username             String?               @unique // Made optional for OAuth users
  email                String                @unique
  passwordHash         String?               // Made optional for OAuth/Magic Link users
  emailVerified        DateTime?
  image                String?
  role                 UserRole              @default(USER)
  isOwner              Boolean               @default(false)
  isSeed               Boolean               @default(false) // Mark seed users for cleanup
  preferredLanguage    String                @default("pt") // UI language preference
  preferredContentLanguages String[]         @default(["pt", "en", "es", "fr", "de"]) // Content languages to show
  createdAt            DateTime              @default(now())
  topics               Topic[]
  comments             Comment[]
  votes                Vote[]
  topicVotes           TopicVote[]
  passwordResetTokens  PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]
  accounts             Account[]             // OAuth accounts
  sessions             Session[]             // User sessions
}

model Topic {
  id                 String        @id @default(cuid())
  slug               String        @unique
  title              String
  description        String        @db.Text
  imageUrl           String?       // Topic image/thumbnail URL
  type               TopicType     @default(YES_NO) // Type of topic: YES_NO or MULTI_CHOICE
  allowMultipleVotes Boolean       @default(false) // For MULTI_CHOICE: allow voting for multiple options
  maxChoices         Int           @default(1) // For MULTI_CHOICE: max number of options user can vote for
  language           String        @default("pt") // ISO 639-1: pt, en, es, fr, de, etc.
  tags               String[]
  status             TopicStatus   @default(ACTIVE)
  reportCount        Int           @default(0) // Number of reports for moderation
  createdById        String
  createdBy          User          @relation(fields: [createdById], references: [id], onDelete: Cascade)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  comments           Comment[]
  topicVotes         TopicVote[]
  options            TopicOption[] // Options for MULTI_CHOICE topics

  @@index([slug])
  @@index([createdAt(sort: Desc)])
  @@index([status])
  @@index([language])
  @@index([reportCount(sort: Desc)])
  @@index([type])
}

model TopicOption {
  id          String      @id @default(cuid())
  label       String      // Option label (e.g., "Messi", "Ronaldo")
  description String?     @db.Text // Optional description
  order       Int         @default(0) // Display order
  topicId     String
  topic       Topic       @relation(fields: [topicId], references: [id], onDelete: Cascade)
  votes       TopicVote[] // Votes for this option
  comments    Comment[]   // Comments associated with this option
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([topicId, order])
  @@index([topicId])
}

model Comment {
  id          String        @id @default(cuid())
  content     String        @db.Text
  side        CommentSide?  // A FAVOR or CONTRA (null for replies or MULTI_CHOICE)
  optionId    String?       // For MULTI_CHOICE topics: associated option
  option      TopicOption?  @relation(fields: [optionId], references: [id], onDelete: Cascade)
  status      CommentStatus @default(ACTIVE)
  reportCount Int           @default(0) // Number of reports for moderation
  isSeed      Boolean       @default(false) // Mark seed comments for cleanup
  topicId     String
  topic       Topic         @relation(fields: [topicId], references: [id], onDelete: Cascade)
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parentId    String?
  parent      Comment?      @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[]     @relation("CommentReplies")
  votes       Vote[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([topicId, createdAt(sort: Desc)])
  @@index([topicId, side])
  @@index([topicId, optionId])
  @@index([userId])
  @@index([reportCount(sort: Desc)])
}

model Vote {
  id        String   @id @default(cuid())
  value     Int // Only +1 for "good argument" quality vote
  isSeed    Boolean  @default(false) // Mark seed votes for cleanup
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, commentId])
  @@index([commentId])
}

model TopicVote {
  id        String     @id @default(cuid())
  vote      ThemeVote? // SIM, NAO, or DEPENDE (for YES_NO topics)
  optionId  String?    // For MULTI_CHOICE topics: selected option
  option    TopicOption? @relation(fields: [optionId], references: [id], onDelete: Cascade)
  topicId   String
  topic     Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([userId, topicId, optionId]) // Allow multiple votes per topic if options differ
  @@index([topicId])
  @@index([optionId])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model EmailVerificationToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

// NextAuth.js models for OAuth and Magic Link support
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
